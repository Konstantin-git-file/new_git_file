public class ExampeMassive {
    public static void main(String[] args) {

        int n = 5;
        double [] a = new double[n];
        for (int i = 0; i < n; i++)
            a [i] = Math.random();

        double max = Double.NEGATIVE_INFINITY;
        for (int i = 0; i < n; i++) {
            if (a[i] > max)
                max = a[i];
            System.out.println(a[i]);
                        }
        }
    }

    public void run() {
        while (!stop) {
            try {
                switch (tlc) {
                    case GREEN:
                        Thread.sleep(100); // зеленый на 10 секунд
                        break;
                    case YELLOW:
                        Thread.sleep(20); // желтый на 2 секунды
                        break;
                    case RED:
                        Thread.sleep(120); // красный на 12 секунд
                        break;

                }
            } catch (InterruptedException exc) {
                System.out.println(exc);
            }
            changeColor();

        }
    }